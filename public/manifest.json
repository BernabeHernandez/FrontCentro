{
  "id": "/",
  "short_name": "Centro App",
  "name": "Centro de Rehabilitación Integral San Juan",
  "description": "Aplicación web oficial del Centro de Rehabilitación Integral San Juan. Ofrece fisioterapia, masajes terapéuticos y programas de rehabilitación personalizados.",
  "icons": [
    {
      "src": "android-launchericon-192-192.png",
      "sizes": "192x192",
      "type": "image/png"
    },
    {
      "src": "android-launchericon-512-512.png",
      "sizes": "512x512",
      "type": "image/png"
    }
  ],
  "screenshots": [
    {
      "src": "image.png",
      "sizes": "1885x983",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Vista principal en escritorio"
    },
    {
      "src": "image1.png",
      "sizes": "396x855",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Vista principal en móvil"
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+centroapp",
      "url": "/?action=%s"
    }
  ],
  "display_override": ["window-controls-overlay"],
  "start_url": "/",
  "scope": "/",
  "display": "standalone",
  "orientation": "portrait",
  "background_color": "#667eea",
  "theme_color": "#667eea",
  "lang": "es-MX",
  "dir": "ltr",
  "categories": ["salud", "rehabilitación", "fisioterapia", "bienestar"],
  "permissions": ["geolocation"],
  "prefer_related_applications": false
}
